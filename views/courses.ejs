    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* Dark Mode */
        body.dark-mode {
            background-color: #1a1a1a;
            color: #ffffff;
        }

        body.dark-mode .navbar {
            background-color: #00284d;
        }

        body.dark-mode .major {
            background-color: #2d2d2d;
            border-color: #004890;
        }

        body.dark-mode .course-item {
            background-color: #3d3d3d;
            color: #ffffff;
        }

        body.dark-mode .course-item a {
            color: #64b2ff;
        }

        body.dark-mode .course-modal {
            background-color: #2d2d2d;
            color: #ffffff;
        }

        body.dark-mode .course-modal button {
            background-color: #004890;
            color: #ffffff;
        }

        /* Navigation Bar */
        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 16px 20px;
            background-color: #003366;
            width: 100%;
            box-shadow: 0 4px 15px rgba(131, 214, 237, 0.5);
            transition: background-color 0.3s ease;
        }

        .navbar:hover {
            background-color: #00284d;
        }

        .menu-icon {
            font-size: 28px;
            cursor: pointer;
            color: #ffffff;
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 40px;
            margin-left: auto;
            margin-right: 10px;
            margin-top: -4px;
        }

        .nav-links li a {
            text-decoration: none;
            color: #fff;
            font-size: 16px;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .nav-links li a:hover {
            background-color: rgba(110, 181, 255, 0.2);
            border-radius: 5px;
            padding: 5px 10px;
        }

        .navbar-right {
            display: flex;
            align-items: center;
            color: white;
            gap: 20px;
        }

        .navbar-right i {
            font-size: 20px;
            cursor: pointer;
        }

        .custom-link {
            color: white;
            text-decoration: none;
        }

        .custom-link:hover {
            color: #ddd;
        }

        /* Dropdown Menu */
        .dropdown-menu {
            position: absolute;
            top: 60px;
            left: 0;
            width: 250px;
            background-color: #f7f7f7;
            border: 1px solid #ddd;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            display: none;
            z-index: 9999;
        }

        .profile-section {
            padding: 10px;
            background-color: #2c3e50;
            color: white;
            text-align: center;
        }

        .profile-img2 {
            width: 125px;
            height: 120px;
            border-radius: 50%;
            margin-top: 10px;
            margin-bottom: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        }

        .profile-name {
            font-weight: bold;
        }

        .profile-info {
            font-size: 14px;
        }

        .dropdown-links {
            list-style-type: none;
            padding: 0;
        }

        .dropdown-links li a {
            display: block;
            padding: 10px;
            color: #333;
            text-decoration: none;
            border-bottom: 1px solid #ddd;
            font-size: 16px;
        }

        .dropdown-links li a:hover {
            background-color: #f0f0f0;
        }

        .dropdown-links li a:last-child {
            color: rgb(0, 0, 0);
        }

        /* Footer */
        footer {
            background-color: #003366;
            color: white;
            text-align: center;
            padding: 20px 0;
            margin-top: 50px;
            width: 100%;
            box-shadow: 0 -4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Course List Styling */
        .major {
            margin: 20px auto;
            width: 80%;
            border: 2px solid #004890;
            border-radius: 10px;
            padding: 20px;
            background: linear-gradient(145deg, #ffffff, #f3f3f3);
            box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
        }

        .major h2 {
            background-color: #004890;
            color: white;
            padding: 15px;
            border-radius: 10px;
            font-size: 1.8em;
            text-shadow: 1px 1px 2px #000;
        }

        .course-list {
            list-style-type: none;
            padding: 0;
        }

        .course-item {
            padding: 10px 0;
            font-size: 1.2em;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .course-item a {
            text-decoration: none;
            color: #004890;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .course-item a:hover {
            color: #004890;
            text-decoration: underline;
        }

        .custom-even {
            background-color: #e9ecef;
            padding: 10px;
        }

        .custom-odd {
            background-color: #ffffff;
            padding: 10px;
        }

        .custom-even:hover,
        .custom-odd:hover {
            background-color: #f1f9ff;
            transform: scale(1.02);
        }

        .certificates {
            margin-top: 20px;
            background-color: #f0f0f0;
            border-top: 2px solid #004890;
            padding: 15px;
            border-radius: 10px;
            box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .certificates h3 {
            color: #004890;
            font-size: 1.5em;
            margin-bottom: 15px;
            text-shadow: 1px 1px 1px #ccc;
        }

        /* Main Heading Style */
        .main-h1 {
            font-size: 4.5rem;
            color: #004890;
            background: linear-gradient(90deg, #64b2ff, #79d9ff);
            padding: 30px;
            border-radius: 30px;
            box-shadow: 0 12px 50px rgba(0, 0, 0, 0.3);
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 6px;
            margin-top: 60px;
            text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.4);
            text-align: center;
            transition: transform 0.3s ease, color 0.3s ease;
        }

        .main-h1:hover {
            transform: scale(1.02);
            color: #79d9ff;
        }

        /* Section Layout */
        .row {
            display: flex;
            justify-content: space-around;
            align-items: flex-start;
            flex-wrap: wrap;
            gap: 30px;
            padding: 40px;
        }

        .col-lg-6 img {
            max-width: 100%;
            height: auto;
            border-radius: 20px;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.25);
            transition: transform 0.4s ease, box-shadow 0.3s ease;
        }

        .col-lg-6 img:hover {
            transform: scale(1.12);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.35);
        }

        /* Enhanced Heading Style */
        .col-lg-6 {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
        }

        .col-lg-6 h1 {
            font-size: 3.2rem;
            font-weight: bold;
            margin-top: 20px;
            margin-bottom: 25px;
            color: #003366;
            line-height: 1.5;
            letter-spacing: 3px;
            text-transform: capitalize;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.25);
            transition: transform 0.3s ease, color 0.3s ease;
        }

        /* Enhanced Paragraph Style */
        .col-lg-6 p {
            font-size: 2rem;
            color: #444;
            line-height: 2;
            margin-bottom: 20px;
            text-align: center;
            padding: 0 20px;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .col-lg-6 p:hover {
            color: #0077cc;
            transform: scale(1.03);
        }

        /* Button Styling */
        .d-grid {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .navbar-left {
            display: flex;
            align-items: center;
            padding: 0 15px;
        }

        .navbar-logo {
            max-height: 50px;
            width: auto;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .navbar-logo:hover {
            transform: scale(1.1);
        }

        /* Responsive Design */
        @media (max-width: 767.98px) {
            .col-lg-6 {
                flex: 0 0 100%;
                padding: 25px;
            }

            .main-h1 {
                font-size: 3rem;
                margin-top: 40px;
                padding: 20px;
            }

            .col-lg-6 h1 {
                font-size: 2.4rem;
            }

            .col-lg-6 p {
                font-size: 1.2rem;
            }
        }

        /* Logo Styling */
        .navbar .logo-container {
            display: inline-block;
            padding-right: 15px;
        }

        .navbar .logo {
            height: 50px;
            width: auto;
        }

        /* Search and Filter */
        .search-filter-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 20px auto;
            width: 80%;
            gap: 20px;
        }

