            flex: 1;
            padding: 10px;
            border: 2px solid #004890;
            border-radius: 10px;
            font-size: 16px;
        }

        .filter-dropdown {
            padding: 10px;
            border: 2px solid #004890;
            border-radius: 10px;
            font-size: 16px;
            background-color: white;
        }

        /* Course Modal */
        .course-modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            max-width: 500px;
            width: 90%;
        }

        .course-modal h3 {
            color: #004890;
            margin-bottom: 10px;
        }

        .course-modal p {
            margin-bottom: 10px;
        }

        .course-modal button {
            padding: 10px 20px;
            background-color: #004890;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .course-modal button:hover {
            background-color: #003366;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        /* Dark Mode Toggle */
        .dark-mode-toggle {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #004890;
            color: white;
            border: none;
